@model QuarterlySalesApp.ViewModels.HomeIndexVM

<h3>Quarterly Sales</h3>

<form method="get" asp-action="Index" class="row g-2 align-items-end mb-3">
	<div class="col-auto">
		<label class="form-label">Employee</label>
		<select class="form-select" name="id" asp-for="SelectedEmployeeId" asp-items="Model.Employees">
			<option value="">All</option>
		</select>
	</div>
	<div class="col-auto">
		<button class="btn btn-primary">Filter</button>
	</div>
</form>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Year</th>
			<th>Quarter</th>
			<th>Employee</th>
			<th class="text-end">Amount</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var s in Model.Sales)
		{
			<tr>
				<td>@s.Year</td>
				<td>@s.Quarter</td>
				<td>@s.Employee!.FullName</td>
				<td class="text-end">@s.Amount.ToString("C")</td>
			</tr>
		}
	</tbody>
</table>
