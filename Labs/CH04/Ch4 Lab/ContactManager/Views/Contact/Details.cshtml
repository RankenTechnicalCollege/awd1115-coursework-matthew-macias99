@model ContactManager.Models.Contact

<h2>Contact Details</h2>
<dl class="row">
	<dt class="col-sm-2">Name</dt>
	<dd class="col-sm-10">@Model.FirstName @Model.LastName</dd>

    <dt class="col-sm-2">Phone</dt>
    <dd class="col-sm-10">@Model.Phone</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Category</dt>
    <dd class="col-sm-10">@Model.Category?.Name</dd>

    <dt class="col-sm-2">Date added</dt>
    <dd class="col-sm-10">@Model.DateAdded</dd>
</dl>

<p>
    <a asp-action="Edit" asp-route-id="@Model.ContactId" class="btn btn-secondary">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.ContactId" class="btn btn-danger">Delete</a>
    <a asp-action="Index" class="btn btn-outline-dark">Home</a>
</p>