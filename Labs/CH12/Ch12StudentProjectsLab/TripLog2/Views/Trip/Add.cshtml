@model Trip
@{
	ViewBag.Title = "Add Trip";
}

<h2>Add Trip</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Add" method="post">
	<div class="mb-3">
		<label class="form-label">Destination</label>
		<select name="DestinationId" asp-items="ViewBag.Destinations" class="form-select">
			<option value="0">Select a Destination</option>
		</select>
	</div>

	<div class="mb-3">
		<label class="form-label">Accomodation</label>
		<select name="AccomodationId" asp-items="ViewBag.Accomodations" class="form-select">
			<option value="0">Select an Accomodation</option>
		</select>
	</div>

	<div class="row g-3">
		<div class="col-md-6">
			<label asp-for="StartDate" class="form-label">Start Date</label>
			<input asp-for=StartDate class="form-control" type="date" />
		</div>
		<div class="col-md-6">
			<label asp-for="EndDate" class="form-label">End Date</label>
			<input asp-for=EndDate class="form-control" type="date" />
		</div>
	</div>

	<div class="mt-3 d-flex gap-2">
		<button type="submit" class="btn btn-primary">Next</button>
		<a asp-controller="Home" asp-action="Index" class="btn btn-outline-dark">Cancel</a>
	</div>
</form>