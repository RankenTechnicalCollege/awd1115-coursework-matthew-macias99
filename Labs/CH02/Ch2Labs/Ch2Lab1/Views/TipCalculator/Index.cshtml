@model TipCalculatorModel
@{
	Layout = "_Layout";
	ViewBag.Title = "Tip Calculator";
}
<h1>Tip Calculator</h1>

<form asp-action="Index" method="post">
	<div asp-validation-summary="All" class="text-danger"></div>
	<div class="mb-3">
		<label for="Amount" class="form-label">Enter Amount: </label>
		<input asp-for="Amount" class="form-control" type="number" step="0.01" min="0"/>
	</div>

	<div class="mb-2">
		<label class="form-label">15% Tip: </label>
		<input value="@ViewBag.Tip15.ToString("C")" class="form-control" readonly />
	</div>

	<div class="mb-2">
		<label class="form-label">20% Tip: </label>
		<input value="@ViewBag.Tip20.ToString("C")" class="form-control" readonly />
	</div>

	<div class="mb-2">
		<label class="form-label">25% Tip: </label>
		<input value="@ViewBag.Tip25.ToString("C")" class="form-control" readonly />
	</div>

	<button type="submit" class="btn btn-success">Calculate</button>
	<a asp-action="Index" class="btn btn-seconday">Clear</a>
</form>
