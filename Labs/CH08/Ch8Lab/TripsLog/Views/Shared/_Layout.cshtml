@{
    var pageTitle = ViewData["Title"] as string;
    var subHeader = ViewBag.SubHeader as string ?? "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TripsLog</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TripsLog.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <header>
            <h1 class="m-0">My Trip Log</h1>
            @if (!string.IsNullOrWhiteSpace(subHeader))
            {
                <div class="fs-5 mt-2">@subHeader</div>
            }
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </div>
</body>
</html>
