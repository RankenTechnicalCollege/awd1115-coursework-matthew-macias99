@model HOT3.Models.Product
@{
	Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
	ViewData["Title"] = "Delete Product";
}

<h2>@ViewData["TItle"]</h2>

<div class="alert alert-warning">
	Are you sure you want to delete <strong>@Model.Name</strong>?
</div>

<dl class="row">
	<dt class="col-sm-2">Brand</dt>
	<dd class="col-sm-10">@Model.Brand</dd>

	<dt class="col-sm-2">Category</dt>
	<dd class="col-sm-10">@Model.Category</dd>

	<dt class="col-sm-2">Price</dt>
	<dd class="col-sm-10">@Model.Price</dd>

	<dt class="col-sm-2">Image</dt>
	<dd class="col-sm-10">@Model.ImageFileName</dd>

	<dt class="col-sm-2">Slug</dt>
	<dd class="col-sm-10">@Model.Slug</dd>
</dl>

<form asp-area="Admin" asp-controller="Products" asp-action="Delete" method="post" 
	asp-route-id="@Model.ProductId" asp-route-slug="@Model.Slug">
	<input type="hidden" asp-for="ProductId"/>
	<div class="d-flex justify-content-between">
		<a asp-area="Admin" asp-controller="Products" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
		<button class="btn btn-danger" type="submit">Delete</button>
	</div>
</form>
