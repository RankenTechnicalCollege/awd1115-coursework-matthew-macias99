@model HOT3.Models.Product
@{
	Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
	ViewData["Title"] = "Create Product";
}

<h2>@ViewData["Title"]</h2>

<form asp-area="Admin" asp-controller="Products" asp-action="Create"  method="post" class="mt-3">
	<div class="row g-3">
		<div class="col-md-6">
			<label asp-for="Name" class="form-label fw-semibold"></label>
			<input asp-for="Name" class="form-control"/>
			<span asp-validation-for="Name" class="text-danger small"></span>
		</div>

		<div class="col-md-3">
			<label asp-for="Brand" class="form-label fw-semibold"></label>
			<input asp-for="Brand" class="form-control" />
			<span asp-validation-for="Brand" class="text-danger small"></span>
		</div>

		<div class="col-md-3">
			<label asp-for="Category" class="form-label fw-semibold"></label>
			<input asp-for="Category" class="form-control" />
			<span asp-validation-for="Category" class="text-danger small"></span>
		</div>

		<div class="col-md-3">
			<label asp-for="Price" class="form-label fw-semibold"></label>
			<input asp-for="Price" class="form-control" />
			<span asp-validation-for="Price" class="text-danger small"></span>
		</div>

		<div class="col-md-5">
			<label asp-for="ImageFileName" class="form-label fw-semibold"></label>
			<input asp-for="ImageFileName" class="form-control"/>
			<span asp-validation-for="ImageFileName" class="text-danger small"></span>
		</div>

		<div class="col-md-4">
			<label asp-for="Slug" class="form-label fw-semibold"></label>
			<input asp-for="Slug" class="form-control" />
			<span asp-validation-for="Slug" class="text-danger small"></span>
		</div>

		<div class="mt-4 d-flex justify-content-between">
			<a asp-area="Admin" asp-controller="Products" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
			<button type="submit" class="btn btn-primary">Create</button>
		</div>
	</div>
</form>