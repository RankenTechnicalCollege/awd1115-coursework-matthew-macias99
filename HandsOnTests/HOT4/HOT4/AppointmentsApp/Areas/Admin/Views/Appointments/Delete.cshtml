@model AppointmentsApp.Models.Appointment

<h4>Delete Appointment</h4>
<p class="text-danger">Are you sure you want to delete this appointment?</p>

<div class="mb-3">
	<dl class="row">
		<dt class="col-sm-3">Id</dt>
		<dd class="col-sm-9">@Model.AppointmentId</dd>

		<dt class="col-sm-3">Start</dt>
		<dd class="col-sm-9">@Model.Start.ToString("f")</dd>

		<dt class="col-sm-3">Customer</dt>
		<dd class="col-sm-9">@Model.Customer?.Username</dd>
	</dl>
</div>

<form asp-action="Delete" method="post">
	<input type="hidden" asp-for="AppointmentId"/>
	<button class="btn btn-danger">Delete</button>
	<a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
</form>