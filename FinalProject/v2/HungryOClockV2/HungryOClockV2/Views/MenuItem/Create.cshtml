@model MenuItem
@{
	ViewBag.Title = "Add Menu Item";
}

<h2>Add Menu Item for @ViewBag.RestaurantName</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Create" method="post" enctype="multipart/form-data">
	<input type="hidden" asp-for="RestaurantId"/>

	<div class="mb-3">
		<label asp-for="Name" class="form-label"></label>
		<input asp-for="Name" class="form-control"/>
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>

	<div class="mb-3">
		<label asp-for="Price" class="form-label"></label>
		<input asp-for="Price" class="form-control" />
		<span asp-validation-for="Price" class="text-danger"></span>
	</div>

	<div class="mb-3">
		<label asp-for="Description" class="form-label"></label>
		<textarea asp-for="Description" rows="3" class="form-control"></textarea>
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>

	<div class="mb-3">
		<label asp-for="ImageUrl" class="form-label"></label>
		<input asp-for="ImageUrl" class="form-control" />
		<span asp-validation-for="ImageUrl" class="text-danger"></span>
	</div>

	<div class="mb-3">
		<label class="form-label">Upload Image (optional)</label>
		<input type="file" name="imageFile" class="form-control" />
		<small class="text-muted">If image provided, this will be used in place of the URL</small>
		<span asp-validation-for="ImageUrl" class="text-danger"></span>
	</div>

	<button type="submit" class="btn btn-success">Save</button>
	<a asp-controller="Restaurant" asp-action="Details" asp-route-slug="@ViewBag.RestaurantSlug" class="btn btn-outline-secondary">Cancel</a>
</form>
