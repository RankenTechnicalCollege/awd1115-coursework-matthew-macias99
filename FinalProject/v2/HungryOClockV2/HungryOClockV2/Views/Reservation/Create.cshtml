@model Reservation
@{
	ViewBag.Title = "Add Reservation";
}

<h2>Book a table at @ViewBag.RestaurantName</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Create" method="post">
	<input type="hidden" asp-for="RestaurantId" />

	<div class="mb-3">
		<label asp-for="ReservationDateTime" class="form-label">Date and Time (only 30 minute increments)</label>
		<input asp-for="ReservationDateTime" type="datetime-local" asp-format="{0:yyyy-MM-ddTHH:mm}" class="form-control" />
		<span asp-validation-for="ReservationDateTime" class="text-danger"></span>
	</div>

	<div class="mb-3">
		<label asp-for="ContactPhone" class="form-label">Phone Number</label>
		<input asp-for="ContactPhone" class="form-control" />
		<span asp-validation-for="ContactPhone" class="text-danger"></span>
	</div>

	<div class="mb-3">
		<label asp-for="ContactEmail" class="form-label">Email</label>
		<input asp-for="ContactEmail" class="form-control" />
		<span asp-validation-for="ContactEmail" class="text-danger"></span>
	</div>

	<div class="mb-3">
		<label asp-for="Accomodations" class="form-label"></label>
		<textarea asp-for="Accomodations" rows="3" class="form-control"></textarea>
		<span asp-validation-for="Accomodations" class="text-danger"></span>
	</div>

	<button type="submit" class="btn btn-success">Save</button>
	<a asp-controller="Restaurant" asp-action="Details" asp-route-slug="@ViewBag.RestaurantSlug" class="btn btn-outline-secondary">Cancel</a>
</form>

@section Scripts{
	<script>
		document.addEventListener("DOMContentLoaded", function(){
			var input = document.getElementById("ReservationDateTime");

			if(!input) return;
			
			input.addEventListener("change", function(){
				if(!input.value) return;

				var dt = new Date(input.value;

				if(isNaN(dt.getTime())){
					return;
				}

				var minutes = dt.getMinutes();
				minutes = minutes < 30 ? 0 : 30;

				dt.setMinutes(minutes);
				dt.setSeconds(0);
				dt.setMilliseconds(0);

				function pad(n){
					return n.toString().padStart(2, "0");
				}

				var formatted =
					dt.getFullYear() + "-" +
					pad(dt.getMonth() + 1) + "-" +
					pad(dt.getDate()) + "T" +
					pad(dt.getHours()) + ":" +
					pad(dt.getMinutes());
				
				input.value = formatted;
			});
		});
	</script>
}
