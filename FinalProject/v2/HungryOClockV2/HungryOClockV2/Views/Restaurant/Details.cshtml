@model Restaurant
@{
	ViewBag.Title = "Restaurant Details";
}

<h2>@Model.Name</h2>

<p><strong>Price Level: </strong> @Model.PriceLevel</p>

<p>
	<strong>Category</strong>
	@{
		var cats = Model.RestaurantCategories
			.Select(rc => rc.Category?.Name)
			.Where(n => !string.IsNullOrEmpty(n));
	}
	@string.Join(", ", cats)
</p>

