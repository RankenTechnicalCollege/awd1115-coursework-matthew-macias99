@model IEnumerable<Category>
@{
	ViewBag.Title = "Manage Categories";
}

<h2>Manage Categories</h2>

@if (TempData["message"] != null)
{
	<div class="alert alert-success">@TempData["message"]</div>
}

<p>
	<a asp-action="Create" class="btn btn-primary">Add Category</a>
</p>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var c in Model)
		{
			<tr>
				<td>@c.Name</td>
				<td class="text-end">
					<a asp-action="Edit" asp-route-id="@c.CategoryId" class="btn btn-secondary me-2">Edit</a>
					<form asp-action="Delete" asp-route-id="@c.CategoryId" method="post" class="d-inline">
						@Html.AntiForgeryToken()
						<button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this category?');">Delete</button>
					</form>
				</td>
			</tr>
		}
	</tbody>
</table>
