@model IEnumerable<FinalProjectHome.Models.Restaurant>
@section Header{
		<h1 class="m-3">Admin - Restaurants</h1>
}

<div class="d-flex justify-content-between align-items-center mb-3">
	<h5 class="mb-0">All Restaurants</h5>
	<a class="btn btn-primary" asp-area="Admin" asp-controller="Restaurants" asp-action="Create">Add New</a>
</div>

@if (Model is null || !Model.Any())
{
	<p class="text-muted">No Restaurants</p>
}
else
{
	<table class="table table-striped align-middle">
		<thead>
			<tr>
				<th>Name</th>
				<th>Price</th>
				<th>Rating</th>
				<th style="width: 220px;"></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var r in Model)
			{
				var slug = (r.Name ?? "").Trim().ToLower().Replace(" ", "-").Replace("'", "").Replace("\"","");
				<tr>
					<td>@r.Name</td>
					<td>@r.PriceLevel</td>
					<td>@r.Rating</td>
					<td class="text-nowrap">
						<a class="btn btn-sm btn-outline-secondary me-1" asp-area="" asp-controller="Restaurants" asp-action="Details"asp-route-id="@r.RestaurantId" asp-route-slug="@slug">Details</a>
						<a class="btn btn-sm btn-outline-primary me-1" asp-area="Admin" asp-controller="Restaurants" asp-action="Edit" asp-route-id="@r.RestaurantId" asp-route-slug="@slug">Edit</a>
						<a class="btn btn-sm btn-outline-danger" asp-area="Admin" asp-controller="Restaurants" asp-action="Delete" asp-route-id="@r.RestaurantId" asp-route-slug="@slug">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
}