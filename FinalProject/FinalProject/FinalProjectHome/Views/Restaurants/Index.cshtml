@using FinalProjectHome.Models
@model IEnumerable<Restaurant>

@functions{
	private static string Slugify(string? text) => string.IsNullOrWhiteSpace(text) ? "" : text.ToLower().Replace(' ', '-');
}
@{
	ViewData["Title"] = "Restaurants";
}

<div class="d-flex justify-content-between align-items-center mt-3">
	<h1 class="mb-3">Restaurants</h1>
	<a class="btn btn-primary mb-3" asp-action="Create">Create New Restaurant</a>
</div>

@if (!Model.Any())
{
	<div class="alert alert-info">No restaurants yet. Click the <strong>Create Button</strong> to add one</div>
}
else
{
	<div class="table-responsive">
		<table class="table table-striped align-middle">
			<thead>
				<tr>
					<th>Name</th>
					<th>Category</th>
					<th>Price Level</th>
					<th>Rating</th>
					<th style="width: 180px"></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					var slug = Slugify(item.Name);
					<tr>
						<td>@item.Name</td>
						<td>@item.Category</td>
						<td>@item.PriceLevel</td>
						<td>@item.Rating</td>
						<td class="text-end">
							<a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.RestaurantId" asp-route-slug="@slug">Details</a>
							<a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.RestaurantId" asp-route-slug="@slug">Edit</a>
							<a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.RestaurantId" asp-route-slug="@slug">Delete</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
}
