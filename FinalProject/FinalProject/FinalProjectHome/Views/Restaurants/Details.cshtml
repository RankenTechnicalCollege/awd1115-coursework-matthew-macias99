@model FinalProjectHome.Models.Restaurant
@{
	ViewData["Title"] = "Restaurant Details";
}
@section Header{
	<h1 class="m-3">Details</h1>
}


<div class="card">
	<div class="card-body">
		<dl class="row">
			<dt class="col-sm-3">Name</dt>
			<dd class="col-sm-9">@Model.Name</dd>

			<dt class="col-sm-3">Category</dt>
			<dd class="col-sm-9">@Model.Category</dd>

			<dt class="col-sm-3">Price Level</dt>
			<dd class="col-sm-9">@Model.PriceLevel</dd>

			<dt class="col-sm-3">Rating</dt>
			<dd class="col-sm-9">@Model.Rating</dd>
		</dl>

		<div class="d-flex gap-2">
			<a asp-action="Edit" asp-route-id="@Model.RestaurantId" class="btn btn-primary">Edit</a>
			<a asp-action="Index" class="btn btn-outline-secondary">Back</a>
		</div>
	</div>
</div>
