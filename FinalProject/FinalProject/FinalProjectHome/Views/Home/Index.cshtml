@{
    ViewData["Title"] = "Hungry O'Clock | Restaurant Reservations & Dining Reviews";
}
@section Header{
        <h1 class="text-center">Welcome to Hungry O'Clock</h1>

}

<section class="hero">
    <div class="container">
        <img src="~/images/logo.svg" alt="Hungry O'Clock Logo" class="img-fluid mb-3" style="max-width:160px" />
        <h1 class="display-4 fw-semibold">Hungry O'Clock</h1>
        <p class="lead mb-4">Reserve a table now. Eat later.</p>

        <form class="search-pill input-group px-3 py-2 bg-white" method="get" action="/Restaurants" role="search">
            <span class="input-group-text bg-white border-0"></span>
            <input type="text" name="search" class="form-control border-0" placeholder="Search any restaurant or cuisine" />
            <button class="btn btn-brand px-4" type="submit">Search</button>
        </form>

        <div class="mt-5">
            <h2>Book faster. Dine happier.</h2>
            <p class="mb-2">
                Hungry O'Clock helps you discover your next favorite local restaurants and book a table for your next
                date night in seconds. You're just a few clicks away from another perfect night out!
            </p>
            <p class="mb-0">Coming soon: verified reviews and local favorites!</p>
        </div>

        <div class="mt-4">
            <a class="btn btn-outline-dark m-2" asp-controller="Reservation" asp-action="Index">Make a Reservation</a>
            <a class="btn btn-outline-dark m-2" href="#">Read Reviews</a>
            <a class="btn btn-outline-dark m-2" asp-controller="Restaurants" asp-action="Index">View Restaurants</a>
        </div>
    </div>
</section>
